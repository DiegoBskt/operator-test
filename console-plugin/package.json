{
    "name": "cluster-assessment-plugin",
    "version": "1.0.0",
    "private": true,
    "repository": "https://github.com/diegobskt/cluster-assessment-operator",
    "license": "Apache-2.0",
    "scripts": {
        "clean": "rm -rf dist",
        "build": "yarn clean && NODE_ENV=production yarn ts-node ./node_modules/.bin/webpack",
        "build:dev": "yarn clean && yarn ts-node ./node_modules/.bin/webpack",
        "start": "yarn ts-node ./node_modules/.bin/webpack serve",
        "start-console": "./start-console.sh",
        "ts-node": "ts-node -O '{\"module\":\"commonjs\"}'",
        "lint": "eslint src --ext .ts,.tsx",
        "test": "jest"
    },
    "consolePlugin": {
        "name": "cluster-assessment-plugin",
        "version": "1.0.0",
        "displayName": "Cluster Assessment",
        "description": "View and manage cluster assessments with health scores and recommendations",
        "exposedModules": {
            "AssessmentDashboard": "./components/AssessmentDashboard",
            "AssessmentDetails": "./components/AssessmentDetails"
        },
        "dependencies": {
            "@console/pluginAPI": "*"
        }
    },
    "dependencies": {
        "@patternfly/react-charts": "^6.94.0",
        "@patternfly/react-core": "^4.276.0",
        "@patternfly/react-icons": "^4.93.0",
        "@patternfly/react-table": "^4.113.0"
    },
    "devDependencies": {
        "@openshift-console/dynamic-plugin-sdk": "4.20.0",
        "@openshift-console/dynamic-plugin-sdk-webpack": "1.1.0",
        "@types/node": "^25.0.9",
        "@types/react": "^19.2.8",
        "@types/react-dom": "^19.2.3",
        "@types/react-router-dom": "^5.3.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.0",
        "eslint": "^8.50.0",
        "eslint-plugin-react": "^7.33.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.3.0",
        "style-loader": "^3.3.0",
        "ts-loader": "^9.5.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.2.0",
        "webpack": "5.75.0",
        "webpack-cli": "^5.1.0",
        "webpack-dev-server": "^4.15.0"
    },
    "peerDependencies": {
        "react": "^17.0.0",
        "react-dom": "^17.0.0"
    },
    "resolutions": {
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0"
    }
}
