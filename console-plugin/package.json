{
    "name": "cluster-assessment-plugin",
    "version": "1.0.0",
    "private": true,
    "repository": "https://github.com/diegobskt/cluster-assessment-operator",
    "license": "Apache-2.0",
    "scripts": {
        "clean": "rm -rf dist",
        "build": "yarn clean && NODE_ENV=production yarn ts-node ./node_modules/.bin/webpack",
        "build:dev": "yarn clean && yarn ts-node ./node_modules/.bin/webpack",
        "start": "yarn ts-node ./node_modules/.bin/webpack serve",
        "start-console": "./start-console.sh",
        "ts-node": "ts-node -O '{\"module\":\"commonjs\"}'",
        "lint": "eslint src --ext .ts,.tsx",
        "test": "jest"
    },
    "consolePlugin": {
        "name": "cluster-assessment-plugin",
        "version": "1.0.0",
        "displayName": "Cluster Assessment",
        "description": "View and manage cluster assessments with health scores and recommendations",
        "exposedModules": {
            "AssessmentDashboard": "./components/AssessmentDashboard",
            "AssessmentDetails": "./components/AssessmentDetails"
        },
        "dependencies": {
            "@console/pluginAPI": "*"
        }
    },
    "dependencies": {
        "@patternfly/react-charts": "^6.94.0",
        "@patternfly/react-core": "^4.276.0",
        "@patternfly/react-icons": "^4.93.0",
        "@patternfly/react-table": "^4.113.0"
    },
    "devDependencies": {
        "@openshift-console/dynamic-plugin-sdk": "1.4.0",
        "@openshift-console/dynamic-plugin-sdk-webpack": "1.1.1",
        "@types/node": "^18.0.0",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "@types/react-router-dom": "^5.3.2",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "copy-webpack-plugin": "^6.4.1",
        "css-loader": "^6.8.0",
        "eslint": "^8.50.0",
        "eslint-plugin-react": "^7.33.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-router": "5.3.x",
        "react-router-dom": "5.3.x",
        "style-loader": "^3.3.0",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.4",
        "webpack": "5.75.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.7.4"
    }
}