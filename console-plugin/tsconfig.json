{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": false,
        "noEmit": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "react",
            "react-dom",
            "node"
        ],
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "console-extensions.json"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/__tests__"
    ]
}